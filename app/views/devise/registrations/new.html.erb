<%= content_for :body_class, "sign_up" %>

<%= link_to fa_icon('users'), root_url, class: "logo" %>
<h3>Create Your Account Now</h3>

<div class="content">
  <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= render 'form_fields', f: f %>
  <% end %>
</div>


<p class="text-center lead">Or sign up using your social newtwork accounts<br>and follow the process</p>
<p class="text-center">
  <% Identity::PROVIDER_PAIRS.each do |provider, name| %>
    <%= authenticate_link(provider, text: "Sign up via #{name}") %>
  <% end %>
</p>


<div class="bottom-wrapper">
  <div class="message">
    <%= render "devise/shared/links" %>
  </div>
</div>
