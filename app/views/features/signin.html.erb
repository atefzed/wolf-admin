<body id="signin">
  <div class="bg clear">
    <div class="signup-switcher">
      <%= link_to "#", class: "active" data: { class: "clear" } do %>
        <i class="fa fa-check"></i>
        Clear
      <% end %>
      <%= link_to "#", data: { class: "" } %>
        <i class="fa fa-check"></i>
        Dark
      <% end %>
    </div>

    <%= link_to root_url, class: "logo" do %>
      <i class="fa fa-users"></i>
    <% end %>

    <h3>Welcome back!</h3>

    <div class="content">
      <form>
        <div class="fields">
          <strong>Email address</strong>
          <input class="form-control" type="text" placeholder="Your email" />
        </div>
        <div class="fields">
          <strong>Password</strong>
          <input class="form-control" type="password" placeholder="Password" />
        </div>
        <div class="info">
          <label>
            <input type="checkbox" name="remember" checked />
            Remember me
          </label>
        </div>
        <div class="actions">
          <%= link_to "Sign in to your account", root_url, class: "btn btn-primary btn-lg" %>
        </div>
      </form>
    </div>

    <div class="bottom-wrapper">
      <div class="message">
        <span>Don't have an account?</span>
        <%= link_to "Sign up here", signup_features_path %>.
      </div>
    </div>
  </div>

  <script type="text/javascript">
    $(function () {
      var $switcher = $(".signup-switcher a");
      $switcher.click(function (e) {
        e.preventDefault();
        $switcher.removeClass("active");
        $(this).addClass("active");
        $(".bg").attr("class", "bg " + $(this).data("class"));
      });
    });
  </script>

</body>
